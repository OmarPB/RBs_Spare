@model Infraestructure.Models.Producto

<div>
    <h4>Producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PrecioUnidad)
                </dt>

                <dd>
                    @*@Html.DisplayFor(model => model.PrecioUnidad)*@
                    @Html.DisplayName(string.Format("{0:C}", Model.PrecioUnidad))
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IVA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IVA)
                </dd>

                <dt>
                    @Html.DisplayName("Marca")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MarcaProducto.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayName("Tipo")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TipoProducto.Descripcion)
                </dd>

            </dl>
        </div>
        <div class="col-md-8">
                <input type="image" src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(Model.Imagen)" id="ImagenActivo" style="height:250px;width:300px">
        </div>
    </div>
</div>

