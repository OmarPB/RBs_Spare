<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RB's Spare</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <link rel="stylesheet" href="~/Content/toastr.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #e31110; padding-top: 1%; padding-bottom: 1%;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img class="img img-responsive" src="@Url.Content("~/Logo/Logo opcional.png")" width="80" height="80" /></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="margin-top:1%; margin-left:1%">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="menu">
                            Mantenimientos <span class="glyphicon  glyphicon glyphicon-plus" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipos de Productos", "List", "TipoProducto")</li>
                            <li>@Html.ActionLink("Marcas de Productos", "List", "MarcaProducto")</li>
                            <li>@Html.ActionLink("Productos", "List", "Producto")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="menu">
                            Administración <span class="glyphicon  glyphicon glyphicon-user" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Control de Empleados", "List", "Empleado")</li>
                            <li>@Html.ActionLink("Reportes", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Catálogo de Productos", "Index", "Home", new { id = "menu" })</li>
                    <li>@Html.ActionLink("Citas para el Taller", "About", "Home", new { id = "menu" })</li>

                </ul>

                <ul class="nav navbar-nav navbar-right" style="margin-top: 1%">
                    <li>
                        @{
                            string nombre = "";
                            Infraestructure.Models.Empleado oEmpleado;
                            // Validar si vienen datos en la session
                            if (Session["User"] != null)
                            {
                                // Casting
                                oEmpleado = Session["User"] as Infraestructure.Models.Empleado;

                                if (oEmpleado != null)
                                {
                                    nombre = $"{oEmpleado.Nombre} {oEmpleado.Apellidos}";

                                    <a class="dropdown-toggle" data-toggle="dropdown" id="menu">
                                        @nombre
                                        <span class="glyphicon  glyphicon-user " aria-hidden="true"></span>
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="@Url.Action("Logout", "Login")">
                                                Salir
                                                <span class="glyphicon   glyphicon-log-out" aria-hidden="true"></span>
                                            </a>

                                        </li>
                                    </ul>
                                }
                            }
                            else
                            {
                                <a style="margin-top: 1%" id="menu" href="@Url.Action("Index", "Login")">
                                    Iniciar Sesión
                                    <span class="glyphicon  glyphicon-log-in " aria-hidden="true"></span>
                                </a>
                            }


                        }

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 4%;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    #menu {
        color: white;
    }

        #menu.dropdown-toggle:focus {
            color: white;
            background-color: #d60c0c;
        }

        #menu.dropdown-toggle {
            color: white;
            background-color: #e31110;
        }
</style>
