<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/toastr.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RB's Spare", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Administración <span class="glyphicon  glyphicon glyphicon-user" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Mantenimiento de Empleados", "List", "Empleado")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Catálogo de Productos", "Index", "Home")</li>
                    <li>@Html.ActionLink("Citas para el Taller", "About", "Home")</li>
                    <li>@Html.ActionLink("Reportes", "Contact", "Home")</li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @{
                            string nombre = "";
                            Infraestructure.Models.Empleado oEmpleado;
                            // Validar si vienen datos en la session
                            if (Session["User"] != null)
                            {
                                // Casting
                                oEmpleado = Session["User"] as Infraestructure.Models.Empleado;

                                if (oEmpleado != null)
                                {
                                    nombre = $"{oEmpleado.Nombre} {oEmpleado.Apellidos}";

                                    <a class="dropdown-toggle" data-toggle="dropdown">
                                        Usuario: @nombre
                                        <span class="glyphicon  glyphicon-user " aria-hidden="true"></span>
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="@Url.Action("Logout", "Login")">
                                                Salir
                                                <span class="glyphicon   glyphicon-log-out" aria-hidden="true"></span>
                                            </a>

                                        </li>
                                    </ul>
                                }
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "Login")">
                                    Iniciar Sesión
                                    <span class="glyphicon  glyphicon-log-in " aria-hidden="true"></span>
                                </a>
                            }


                        }

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
